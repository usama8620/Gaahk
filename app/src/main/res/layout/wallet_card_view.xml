<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/wallet_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4.0dp"
    android:layout_marginTop="4.0dp"
    android:layout_marginRight="4.0dp"
    android:layout_marginBottom="4.0dp"
    android:background="@drawable/border_layout"
    card_view:cardBackgroundColor="@color/white"
    app:ignore="NamespaceTypo">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@mipmap/add_wallet"
                />

            <TextView
                android:id="@+id/wallet_text_view"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recieved"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_35sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"


                />

            <TextView
                android:id="@+id/wallet_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_185sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="PKR"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/card_text_view1"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 9,000"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/wallet_textview1"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_below="@+id/wallet_text_view"
                android:layout_marginLeft="@dimen/_35sdp"


                />

            <TextView
                android:id="@+id/wallet_textview2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="officialusama"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_below="@+id/wallet_text_view"
                android:layout_marginLeft="@dimen/_60sdp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27/10/20"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp"
                android:layout_toRightOf="@id/wallet_textview2"
                android:layout_below="@+id/wallet_text_view"
                android:layout_marginLeft="@dimen/_50sdp"


                />




        </RelativeLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>