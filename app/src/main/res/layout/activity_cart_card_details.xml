<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    >


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <ImageButton
            android:id="@+id/back_payment"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_18sdp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Details"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_7sdp"


            />


    </LinearLayout>



    <LinearLayout
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/border_layout"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    >


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit or Debit Card"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"


                        />

                    <ImageView
                        android:id="@+id/cart_card_visa_imageview"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@mipmap/visaa_logo"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/cart_card_master_imageview"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center"
                        android:background="@mipmap/master_card"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/card_account_no"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/et_style"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Account No"
                    android:textStyle=""
                    android:textColorHint="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/card_expire"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/reg_first_name"
                        android:background="@drawable/et_style"
                        android:inputType="text"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@android:color/black"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:hint="MM/YY"
                        android:textColorHint="@android:color/black" />



                    <EditText
                        android:id="@+id/card_cvv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/reg_gender"
                        android:background="@drawable/et_style"
                        android:inputType="text"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:hint="CVV"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black" />



                </LinearLayout>

                <Spinner
                    android:id="@+id/card_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/et_style"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:spinnerMode="dropdown"
                    android:dropDownWidth="match_parent"
                    />



                <EditText
                    android:id="@+id/card_postal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/reg_gender"
                    android:background="@drawable/et_style"
                    android:inputType="text"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Postcode"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp"
                    >


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"



                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PKR"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_130sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/red_500"
                        android:gravity="end"
                        />

                    <TextView
                        android:id="@+id/cart_payment_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/red_500"

                        />

                </LinearLayout>


                <Button
                    android:id="@+id/cart_card_details_proceed_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reg_textview"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_button"
                    android:scaleType="fitCenter"
                    android:text="Proceed"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />







            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</RelativeLayout>