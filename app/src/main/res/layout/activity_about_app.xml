<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    >


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <ImageButton
            android:id="@+id/back_about_app"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_18sdp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Us"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_7sdp"


            />


    </LinearLayout>



    <RelativeLayout
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/border_layout"

        >


    <ImageView
        android:id="@+id/about_app_image_view"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@mipmap/gahak_logo" />



    <TextView
        android:id="@+id/about_app_text_view"
        android:layout_below="@+id/about_app_image_view"
        android:layout_width="@dimen/_235sdp"
        android:layout_height="wrap_content"
        android:text="whatever you want to add. you have to add here the portfolio of the company."
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"


        />

    <View
        android:id="@+id/about_app_view_2"
        android:layout_below="@+id/about_app_text_view"

        android:layout_width="@dimen/_235sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        />
    </RelativeLayout>

</RelativeLayout>