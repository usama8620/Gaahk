<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    >


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <ImageButton
            android:id="@+id/back_cart_payment"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_18sdp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_7sdp"


            />


    </LinearLayout>



    <LinearLayout
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/border_layout"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                >


                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RECOMMENDED"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"


                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    >


                    <TextView
                        android:id="@+id/settings_textview1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit or Debit Card Info"

                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"


                        />

                    <ImageButton
                        android:id="@+id/cart_payment_visa_imageview"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@mipmap/visaa_logo"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_gravity="center"
                        />
                    <ImageButton
                        android:id="@+id/cart_payment_master_imageview"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center"
                        android:background="@mipmap/master_card"
                        />

                </LinearLayout>
                <View
                    android:id="@+id/about_app_view_2"
                    android:layout_below="@+id/about_app_text_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PAYMENT METHODS"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"


                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <ImageView
                        android:id="@+id/jazz_imageview"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@mipmap/jazzcash"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/jazz_textview1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jazz Cash"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"


                        />






                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <ImageView
                        android:id="@+id/easypaisa_imageview"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@mipmap/jazzcash"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/easypaisa_textview1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EasyPaisa"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"


                        />






                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <ImageView
                        android:id="@+id/hbl_imageview"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@mipmap/hbl"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/hbl_textview1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HBL Account"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"


                        />






                </LinearLayout>
                <View
                    android:id="@+id/about_app_view_3"
                    android:layout_below="@+id/about_app_text_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    />


                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"


                    />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash On Delivery"

                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/colorPrimary"


                        />

                    <Switch
                        android:id="@+id/payment_method_simpleSwitch"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_140sdp"
                        android:checked="true"
                        android:theme="@style/SwitchTheme"

                        />



                </LinearLayout>

                <View
                    android:id="@+id/about_app_view_4"
                    android:layout_below="@+id/about_app_text_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp"
                    >



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"



                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PKR"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_130sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/red_500"
                        android:gravity="end"
                        />

                    <TextView
                        android:id="@+id/cart_payment_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/red_500"
                        android:layout_marginLeft="@dimen/_5sdp"

                        />



                </LinearLayout>

                <Button
                    android:id="@+id/cart_payment_method_proceed_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reg_textview"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/round_button"
                    android:scaleType="fitCenter"
                    android:text="Proceed"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />







            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</RelativeLayout>