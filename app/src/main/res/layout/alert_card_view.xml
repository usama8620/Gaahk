<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/alert_cardview"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"

        >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_top"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"

            android:layout_gravity="center"
            android:src="@mipmap/display" />

        <TextView

            android:id="@+id/alert_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_marginTop="@dimen/_8sdp"
            android:text="officialusama"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"


            />

        <TextView

            android:id="@+id/alert_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="liked your profile"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:textColor="@color/black"


            />



    </LinearLayout>



</LinearLayout>