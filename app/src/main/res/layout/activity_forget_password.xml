<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <ImageButton
            android:id="@+id/forgot_back_button"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_18sdp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_7sdp"


            />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_margin="@dimen/_12sdp"
        android:paddingBottom="@dimen/_10sdp"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_6sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/reg_username"
                android:background="@drawable/et_style"
                android:textColor="@android:color/black"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:hint="Enter your email"
                android:textColorHint="@android:color/black" />



            <Button
                android:id="@+id/forget_button"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_textview"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/round_button"
                android:scaleType="fitCenter"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check your email. if you didn't recieve mail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"


                />
            <TextView
                android:id="@+id/click_here_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textColor="#ff5757"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"



                />











        </LinearLayout>




    </ScrollView>




</RelativeLayout>

