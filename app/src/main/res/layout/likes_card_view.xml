<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/like_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/_14sdp"
    android:layout_marginRight="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_14sdp"

    xmlns:android="http://schemas.android.com/apk/res/android">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginLeft="@dimen/_16sdp"
            android:src="@mipmap/display" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <TextView

                android:id="@+id/card_text_view2"
                android:layout_width="@dimen/_89sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Usama Shahid"

                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"


                />

            <Button
                android:id="@+id/edit_profile_save_button"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_toRightOf="@id/card_text_view2"
                android:layout_marginLeft="@dimen/_35sdp"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text="Follow"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>



    </LinearLayout>




