<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"

    >


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <ImageButton
            android:id="@+id/back_reviews"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_18sdp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_7sdp"


            />


    </LinearLayout>



    <RelativeLayout
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/border_layout"

        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="bottom"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/black"
            app:tabIndicatorFullWidth="false"
            app:tabPaddingStart="25dp"
            app:tabPaddingEnd="25dp"
            app:tabIndicatorHeight="2dp"
            app:tabMode="fixed"
            app:tabPaddingTop="@dimen/_10sdp"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/black">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_395sdp">

        </androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@+id/viewPager"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"

            android:background="@drawable/border_layout"
            >

            <EditText
                android:id="@+id/post_tag_edit_text"
                android:layout_width="@dimen/_238sdp"
                android:layout_height="@dimen/_30sdp"

                android:background="@drawable/search_border"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:hint="Give Reviews"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"


                android:textColorHint="@android:color/black" />



            <ImageButton

                android:id="@+id/event_info_send_imgbutton"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/send_msg"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"



                />


        </LinearLayout>






    </RelativeLayout>

</RelativeLayout>