<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"

    >


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <ImageButton
            android:id="@+id/back_wallet"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_18sdp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-Wallet"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_7sdp"


            />


    </LinearLayout>




    <RelativeLayout
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/border_layout"

        >







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/textview2_cart"
                android:layout_margin="@dimen/_10sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    >

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Balance"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_2sdp"

                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"


                        />

                    <TextView

                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs."
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#2c652f"



                        />

                    <TextView
                        android:id="@+id/order_text_view"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25000"
                        android:textStyle="bold"

                        android:textColor="#2c652f"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textSize="@dimen/_10sdp"



                        />

                    <ImageView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@mipmap/gahak_logo"
                        android:layout_marginLeft="@dimen/_170sdp"
                        />





                </RelativeLayout>

                <View
                    android:id="@+id/about_app_view_4"
                    android:layout_below="@+id/about_app_text_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    />


                <TextView
                    android:id="@+id/wallet_activity_textview"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest Activity"
                    android:textStyle="bold"

                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"



                    />




                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wallet_card_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    android:layout_below="@+id/textview_cart"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>



    </RelativeLayout>


</RelativeLayout>